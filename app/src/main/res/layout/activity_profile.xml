<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Заголовок Профиль -->
        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/profile_text"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Аватарка -->
        <ImageView
            android:id="@+id/profileAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_profile_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileTitle" />

        <!-- Кнопка смены фото -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/changePhotoButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="?attr/colorSurface"
            app:icon="@drawable/ic_camera"
            app:iconTint="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@+id/profileAvatar"
            app:layout_constraintEnd_toEndOf="@+id/profileAvatar"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp" />

        <!-- Имя пользователя -->
        <TextView
            android:id="@+id/userNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileAvatar" />

        <!-- Email пользователя -->
        <TextView
            android:id="@+id/userEmailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="user@example.com"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userNameText" />

        <!-- Способ оплаты -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/paymentMethodButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:gravity="start|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="16dp"
            android:text="@string/payment_method_text"
            android:textAlignment="textStart"
            android:textColor="?attr/colorPrimary"
            app:backgroundTint="?attr/colorSurface"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_payment"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="#FF6F00"
            app:layout_constraintTop_toBottomOf="@+id/userEmailText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="#73FF6F00"
            app:strokeWidth="1dp" />

        <!-- Настройки -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingsButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="start|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="16dp"
            android:text="@string/settings_text"
            android:textAlignment="textStart"
            android:textColor="?attr/colorPrimary"
            app:backgroundTint="?attr/colorSurface"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_settings"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="#FF6F00"
            app:layout_constraintTop_toBottomOf="@+id/paymentMethodButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="#73FF6F00"
            app:strokeWidth="1dp" />

        <!-- Смена пароля -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/changePasswordButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="start|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="16dp"
            android:text="@string/text_resetpassword"
            android:textAlignment="textStart"
            android:textColor="?attr/colorPrimary"
            app:backgroundTint="?attr/colorSurface"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_password"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="#FF6F00"
            app:layout_constraintTop_toBottomOf="@+id/settingsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="#73FF6F00"
            app:strokeWidth="1dp" />

        <!-- Выход -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/logoutButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="start|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="16dp"
            android:text="@string/exit_button"
            android:textAlignment="textStart"
            android:textColor="?attr/colorPrimary"
            app:backgroundTint="?attr/colorSurface"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_logout"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="#FF6F00"
            app:layout_constraintTop_toBottomOf="@+id/changePasswordButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="#73FF6F00"
            app:strokeWidth="1dp" />

        <!-- Нижнее меню -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_nav_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>